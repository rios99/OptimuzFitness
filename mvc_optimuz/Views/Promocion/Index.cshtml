@model IEnumerable<mvc_optimuz.Models.Promocion>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Promociones</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Promocion" asp-action="Upsert" class="btn btn-primary">Nueva Promocion</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th class="text-center">
                        Nombre de la Promocion
                    </th>
@*                    <th class="text-center">
                        Descripcion
                    </th>*@
                    <th class="text-center">
                        Precio
                    </th>
                    <th class="text-center">
                        Contrato Afiliado
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th class="text-center" >@item.NombrePromocio</th>
@*                        <th class="text-center" >@item.Descripcion</th>*@
                        <th class="text-center" >@item.Precio</th>
                        <th class="text-center" >@item.Contrato.NombreContrato</th>
                        <th class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Promocion" asp-action="Upsert" asp-route-Id="@item.Id" class="btn btn-primary mx-2">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a asp-controller="Promocion" asp-action="Consultar" asp-route-Id="@item.Id" class="btn btn-info mx-2">
                                    <i class="fa-solid fa-circle-info"></i>
                                </a>
                                <a asp-controller="Promocion" asp-action="Eliminar" asp-route-Id="@item.Id" class="btn btn-danger mx-2">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </div>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No hay registros</p>
    }
</div>

